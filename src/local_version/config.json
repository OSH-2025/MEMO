{
  "model_path": "./models/qwen/Qwen3-0___6B",
  "data_dir": "data",
  "data_format": "multiple_files",
  "data_file": "data/train.json",
  "output_dir": "./output/qwen3-finetune",
  "train_ratio": 0.8,
  
  "torch_dtype": "float32",
  "max_length": 384,
  
  "use_lora": true,
  "lora_target_modules": ["q_proj", "k_proj", "v_proj", "o_proj", "gate_proj", "up_proj", "down_proj"],
  "lora_r": 8,
  "lora_alpha": 32,
  "lora_dropout": 0.1,
  
  "per_device_train_batch_size": 4,
  "per_device_eval_batch_size": 4,
  "gradient_accumulation_steps": 4,
  "num_train_epochs": 3,
  "learning_rate": 1e-4,
  "warmup_steps": 100,
  "weight_decay": 0.01,
  "logging_steps": 10,
  "save_steps": 100,
  "eval_steps": 100,
  "eval_strategy": "steps",
  "load_best_model_at_end": true,
  "gradient_checkpointing": true,
  "fp16": false,
  
  "max_new_tokens": 100,
  "do_sample": true,
  "temperature": 0.7,
  "top_p": 0.9,
  
  "system_prompt": "<|begin_of_text|><|start_header_id|>system<|end_header_id|>\n\n你是一个智能助手，请根据用户最近的活动序列，预测下一个最有可能的用户活动。请确保输出格式与输入格式一致，应为\"时间 - 操作\"的形式。\n<|eot_id|>",
  
  "run_evaluation": true
}